<h1>Listing repositories</h1>

<table>
  <tr>
    <th>Project Name</th>
    <th>Repository Type</th>
  </tr>

  <tr>
  	<td><%= link_to 'Lucene', repository_path('lucene')%></td>
  	<td align="center">git</td>
  </tr>
<% @repositories.each do |repository| %>
  <tr>
    <td><%= link_to repository.name, repository %></td>
    <td align="center"><%= repository.repo_type %></td>
  </tr>
<% end %>
</table>

